{
  "name": "uikit",
  "title": "UIkit",
  "description": "UIkit is a lightweight and modular front-end framework for developing fast and powerful web interfaces.",
  "version": "3.0.0",
  "scripts": {
    "compile-less": "mkdir css & npm run images & npm run compile-less-core && npm run compile-less-theme && node scripts/less",
    "compile-less-core": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.less > css/uikit.css",
    "compile-less-theme": "lessc --relative-urls --rootpath=../src/less/ src/less/uikit.theme.less > css/uikit.theme.css",
    "images": "mkdir images &  node scripts/images",
    "compile-rtl": "mkdir css & npm run images && node scripts/rtl-before && npm run compile-less && node scripts/rtl-after",
    "compile-js": "node scripts/build && node scripts/all",
    "compile": "npm run compile-less && npm run compile-js",
    "watch": "npm-watch",
    "test": "webpack-dev-server --inline --hot && open http://localhost:8080/tests/"
  },
  "devDependencies": {
    "babel-core": "6.14.0",
    "babel-eslint": "5.0.4",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.14.0",
    "concat-files": "^0.1.1",
    "glob": "^7.0.3",
    "jquery": "^3.1.1",
    "less": "^2.7.1",
    "npm-watch": "^0.1.7",
    "rollup": "^0.34.13",
    "rollup-plugin-babel": "2.6.1",
    "rollup-plugin-node-resolve": "1.7.0",
    "uglify-js": "^2.7.3",
    "webpack": "2.1.0-beta.22",
    "webpack-dev-server": "^2.1.0-beta.3"
  },
  "watch": {
    "compile-js": "src/js/**/*.js",
    "compile-less": "**/*.less"
  }
}
